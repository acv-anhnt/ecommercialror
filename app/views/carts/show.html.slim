          .panel.panel-default
            .panel-heading.text-center
              h4
                | Review Order
            .panel-body
              .col-md-12
                strong
                  | Subtotal (# item)
                .pull-right
                  span
                    | $
                  span
                    | 200.00
              .col-md-12
                strong
                  | Tax
                .pull-right
                  span
                    | $
                  span
                    | 200.00
              .col-md-12
                small
                  | Shipping
                .pull-right
                  span
                    | -
